<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |t| %>
  <li>
    <% if t.completed %>
      <%= "🥑" %>
    <% else %>
      <%= "🍞" %>
    <% end %>
    <%= link_to t.title, task_path(t) %> <%= link_to "🗑", task_path(t), method: :delete %> </li>
  <% end %>
</ul>

<%= link_to '🥨 add a new task !', new_task_path, class: 'btn btn-primary'%>
